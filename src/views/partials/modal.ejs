<section class="modal-product-background hidden z-10">
</section>


<div class="modal-product-content bg-white overflow-y-scroll lg:p-6 w-full h-screen lg:w-11/12 lg:h-5/6 fixed -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 rounded-l-lg scale-0 z-10">

    <button class="btn-close-modal fixed right-0 top-0"><img src="../images/close.svg" class="w-9 h-9"></button>

    <div>
        <!-- PRODUCT PAGE -->
        <section class="modal-product-content-page grid gap-4 p-2.5 text-center">
            <!-- box images -->
            <div class="modal-product-content-page-images mt-1 flex flex-col lg:row-start-1 lg:row-end-9">
                <div class="secondary-images flex row-start-2 gap-2 py-2 order-1 h-20"></div>
                <div class="main-image max-w-full border overflow-x-hidden relative">
                    <button class="btn-modal-left absolute top-1/2 -translate-y-1/2 left-2 border rounded-full w-8 h-8 flex items-center justify-center z-10"><img src="../images/chevron-left.svg" class="w-10"></button>
                    <button class="btn-modal-right absolute top-1/2 -translate-y-1/2 right-2 border rounded-full w-8 h-8 flex items-center justify-center z-10"><img src="../images/chevron-right.svg"></button>
                    <div class="product-images flex duration-200"></div>
                </div>
            </div>
            <!-- box description -->
            <div class="modal-product-content-page-product-name row-start-1 text-left">
                <h2 id="prod-name" class="py-1">Nome do Produto</h2>
                <h5 class="text-xs py-1">Código: <span class="modal-product-code">0000</span> | Ref. <span class="modal-product-ref">000000</span></h5>
            </div>
            <div class="modal-product-content-page-product-payment">
                <h2>R$ <span id="prod-price">0</span></h2>
                <p class="product-payment-see-parcels cursor-pointer underline">Ver parcelamentos</p>
            </div>
            <!-- box variations -->
            <div class="modal-product-content-page-variations">
                <div class="first-variation my-2">
                    <h4>Cor: <span class="first-variation-selected"></span></h4>
                    <ul class="flex gap-2 justify-center lg:justify-start">
                    </ul>
                </div>
                <div class="second-variation">
                    <h4>Tamanho: <span class="second-variation-selected">M</span></h3>
                        <ul class="flex gap-2 justify-center lg:justify-start">
                        </ul>
                </div>
            </div>
            <div class="modal-product-content-page-quantity-box flex flex-col justify-center items-center">
                <label for="product-quantity">Quantidade:</label>
                <input type="number" id="product-quantity" value="1" class="w-12 h-10 text-center border">
            </div>
            <button id="product-purchase" class="bg-c-bg-button w-3/4 p-2 mx-auto">COMPRAR</button>
            <h5 id="product-add-wishlist" class="cursor-pointer">+ Adicionar à lista de desejos</h5>
            <div class="modal-product-content-page-shipping w-4/6 mx-auto flex flex-col">
                <label for="shipping-cep" class="text-left pb-1 w-full">Simule o frete para sua região</label>
                <div class="shipping-calc flex justify-around items-center w-full">
                    <input type="text" id="product-shipping-cep" placeholder="Digite seu CEP" class="text-xs border w-7/12 py-2 pl-1">
                    <button class="text-xs bg-c-bg-button py-2 w-5/12">Calcular Frete</button>
                </div>
            </div>
        </section>
    </div>

    <!-- PRODUCT DESCRIPTION -->
    <section class="modal-product-content-description p-2.5 my-10">
        <h2 class="page-title">DESCRIÇÃO</h2>
        <div class="prod-description text-justify"></div>
    </section>


</div>

<!-- MODAL - PAYMENT -->
<section class="product-payment-modal-background bg-black/95 min-w-full min-h-full fixed top-0 left-0 hidden z-20">
</section>

<section class="product-payment-internal-modal scale-0 bg-white w-max text-left lg:w-96 h-min p-9 fixed text-base -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 z-20">
    <button class="btn-close-payment-modal absolute -top-4 -right-4 rounded-full bg-red-600 border-2"><img src="../images/close-white.svg" class="w-5 h-5 m-1"></button>
    <p class="font-bold">Cartão de Crédito</p>
    <ul class="product-payment-credit">
    </ul>
    <p class="font-bold mt-4">Boleto</p>
    <ul class="product-payment-ticket">
        <li>1x R$ 104,50 (desconto de 5%)</li>
    </ul>
</section>